---
import Shop from './Shop';
import shopItems from '../../public/shop-items.json';
import ShopImg from './ShopImg.astro';

interface Props {
  title?: string;
  ad?: 'shop-img' | 'shop' | 'shop-xl';
}

const { title, ad } = Astro.props;
---

<section class="mb-4">
  {title && <h2 class="text-3xl font-semibold text-gray-800 mb-2">{title}</h2>}
  <p class="text-xl text-gray-700 mb-4">
    <slot />
  </p>
  {ad === 'shop' && <Shop items={shopItems} client:load />}
  {ad === 'shop-xl' && <Shop items={shopItems} rows={2} client:load />}
  {ad === 'shop-img' && <ShopImg />}
</section>
